{% extends 'base.html.twig' %}
{% block title %}Authentification {% endblock %}
{% block stylesheets %}
        <link href="{{ asset('css/login.css') }}" rel="stylesheet" />
{% endblock %}

{% block header %}
    <div id="header" class="row">
        <div id="logo">
             <a href="">
                 <img src="{{ asset('images/logo.png') }}" width="100" height="100" alt="Symfony!" />
            </a>
        </div>
     </div>
{% endblock %}

{% block body %}
 
    

        <div class="row">
           
  
            <div class=" sign_in col-md-offset-3 col-md-5">
                <div class="form-group">
                    <h2 class="form_header col-sm-offset-4 col-sm-5"> Connexion </h2> <br/>
                </div>
                <div class ="form-group">
                {% if error %}
                        <div class="alert alert-danger col-sm-offset-3 col-sm-7">{{ message }}</div>
                    {% endif %}
                </div>
                
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="from-group">
                    {{ form_errors(form.username)  }}
                    {{ form_widget(form.username,{ 'attr': {'placeholder': 'Nom d\'utilisateur', 'class': 'col-sm-8 col-sm-offset-2 col-xs-offset-0 col-xs-12'} })}}
    
                </div>
                <div class="form-group">
                    {{ form_errors(form.pass) }}
                    {{ form_widget(form.pass,{ 'attr': {'placeholder': 'Mot de passe', 'class': 'col-sm-8 col-sm-offset-2 col-xs-offset-0 col-xs-12'} }) }}
                </div>
                <div class="form-group">
                    <div class="row">
                        
                            {{ form_widget(form.save,{ 'attr': {'class': 'col-sm-5 col-sm-offset-4 col-xs-offset-0 col-xs-12'} }) }}
                    </div>
                </div>
                {{ form_end(form) }}
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="text-center">
                                 <a  class="forgot-password" href="">Probl√®mes ?</a>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>

    

{% endblock %}
