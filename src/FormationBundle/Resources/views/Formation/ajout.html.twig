{% extends 'header.html.twig' %}
{% block title %} {{title}} {% endblock %}
{% block stylesheets %}
        <link href="{{ asset('css/acceuil.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
	<div  class="row">
    	<div class="navbar navbar-default col-xs-5 col-xs-offset-3">
    		<div class="container-fluid" id="header">
	    			
			         <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	      					<ul class="nav navbar-nav">
							    
	      							<li><a href="{{ url('acceuil') }}">Acceuil </a></li>
	      							<li><a href="{{ url('formation') }}">Formations </a></li>
							        <li><a href="{{ url('mesFormation') }}"> Mes formations </a></li>
							        <li><a href="{{ url('ajouts') }}"> Ajouter formation</a></li>
							        <li><a href="{{ url('suivi') }}"> Suivi</a></li>
							</ul>
		        	</div>
		    </div>
	    </div>
     </div>
     {% if app.request.get('mess') %}
    	
		<div class="alert alert-info">
	    	<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
	    	<span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
	    	{{ app.request.get('mess') }}
  		</div>
	{% endif %}

     <div class="row">
     	<div class="container">
     			{{ form_start(form,{ 'attr': {'role': 'form', 'class': 'form-horizontal col-xs-9'} })}}
                {{ form_errors(form) }}
                	<h2 class="col-xs-offset-4">Formulaire d'ajout de formation</h2><br/><br/>
                	<div class="form-group">
                		<label for="contenu" class="col-sm-3 control-label">Contenu</label>
                		<div class="col-sm-9">
                			{{ form_errors(form.contenu) }}
                    		{{ form_widget(form.contenu,{ 'attr':  {'class': 'form-control'} }) }}
                		</div>
                	</div>
                	<div class="form-group">
                		<label for="cout" class="col-sm-3 control-label">Cout</label>
                		<div class="col-sm-9">
                			{{ form_errors(form.cout) }}
                    		{{ form_widget(form.cout,{ 'attr':  {'class': 'form-control'} }) }}
                		</div>
                	</div>
                	<div class="form-group">
                		<label for="date" class="col-sm-3 control-label">Date</label>
                		<div class="col-sm-9">
                			{{ form_errors(form.date) }}
                    		{{ form_widget(form.date,{ 'attr':  {'class': 'form-control'} }) }}
                		</div>
                	</div>
                	<div class="form-group">
                		<label for="duree" class="col-sm-3 control-label">Duree</label>
                		<div class="col-sm-9">
                			{{ form_errors(form.duree) }}
                    		{{ form_widget(form.duree,{ 'attr':  {'class': 'form-control'} }) }}
                		</div>
                	</div>
                	<div class="form-group">
                		<label for="preRequis" class="col-sm-3 control-label">Pr√©-requis</label>
                		<div class="col-sm-9">
                			{{ form_errors(form.preRequis) }}
                    		{{ form_widget(form.preRequis,{ 'attr':  {'class': 'form-control'} }) }}
                		</div>
                	</div>
                	<div class="form-group">
                		<div class="col-sm-9 col-sm-offset-3">
                			{{ form_widget(form.save,{ 'attr': {'class': 'btn btn-primary btn-block'} }) }}
                		</div>
                	</div>
				 {{ form_end(form) }}
			</div>

     	</div>
	</div>

{% endblock %}